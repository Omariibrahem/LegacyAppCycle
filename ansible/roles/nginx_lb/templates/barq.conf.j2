upstream barq_backend {
    {% for u in upstreams %}
    server {{ u.addr }} max_fails=3 fail_timeout=10s;
    {% endfor %}
    keepalive 32;
}

server {
    listen 80 default_server;
    server_name _;

    location / {
        proxy_http_version 1.1;
        proxy_set_header Connection "";
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_pass http://barq_backend;
    }
}

